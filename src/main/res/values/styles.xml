<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="AppTheme" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <!-- TODO: I want to prevent the hamburger to arrow animation because the drawer is on top, but this does not work -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
    </style>

    <style name="ActionButtonOverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <!--<item name="android:minWidth">60dp</item>-->
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <!--<item name="android:minWidth">60dp</item>-->
        <!-- Why doesn't the following work! -->
        <!--<item name="android:layout_marginRight">60dp</item>-->
        <!--<item name="android:paddingRight">600dp</item>-->
    </style>

    <style name="Widget.Chanobol.Drawer.Header" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="Widget.Chanobol.Drawer.Entry" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.Chanobol.AdapterView" parent="">
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:background">@color/bg</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="Widget.Chanobol.AdapterView.BoardsGridView">
        <item name="android:columnWidth">@dimen/column_width</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Widget.Chanobol.AdapterView.GalleryGridView">
        <item name="android:columnWidth">@dimen/column_width_gallery</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Widget.Chanobol.AdapterView.PostsListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">10.0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Widget.Chanobol.AdapterView.PostsDialogListView">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/post_dialog_gap</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
    </style>

</resources>
