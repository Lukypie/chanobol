<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:tools="http://schemas.android.com/tools"
    package="anabolicandroids.chanobol"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".App"
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="false"
        tools:ignore="UnusedAttribute"
        >
        <activity
            android:name=".ui.boards.FavoritesActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.boards.BoardsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity
            android:name=".ui.threads.ThreadsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity
            android:name=".ui.threads.WatchlistThreadsActivity"
            android:taskAffinity=".watchlist"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity
            android:name=".ui.posts.PostsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity
            android:name=".ui.posts.WatchlistPostsActivity"
            android:taskAffinity=".watchlist"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity
            android:name=".ui.media.MediaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/MediaActivity"
            />
        <activity
            android:name=".ui.media.GalleryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity
            android:name="anabolicandroids.chanobol.ui.Settings"
            />
    </application>

</manifest>
